{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col">
            <h1>S'enregistrer</h1>

            {{ form_start(registrationForm) }}
            <fieldset>
                <legend class="mb-3"> Mon identité </legend>
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.email) }}
            </fieldset>
            <fieldset>
                <legend class="mb-3"> Mes coordonnées </legend>
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.zipcode) }}
                {{ form_row(registrationForm.city) }}
            </fieldset>
            
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot-de-passe'
            }) }}
            {{ form_row(registrationForm.RgpdConsent) }}

        <button type="submit" class="btn btn-primary btn-md my-3">M'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-secondary" >Me connecter</a>
        
    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

</section>
    
{% endblock %}
